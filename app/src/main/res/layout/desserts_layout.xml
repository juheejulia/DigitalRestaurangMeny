<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/desserts_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_extra_large">

    <androidx.cardview.widget.CardView
        android:id="@+id/desserts_card_view_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_extra_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bibimbab_picture"
                android:layout_width="@dimen/_200dp"
                android:layout_height="@dimen/_150dp"
                android:src="@drawable/bibimbap"
                android:scaleType="centerCrop"
                android:contentDescription="@string/bibimbab" />

            <TextView
                android:id="@+id/appetizers_text_view_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light_black_2"
                android:padding="@dimen/margin_small"
                android:text="@string/desserts_1"
                android:textStyle="bold"
                android:textSize="@dimen/font_medium"
                android:textColor="@color/red_orange">
            </TextView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/desserts_card_view_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/desserts_card_view_1"
        android:layout_margin="@dimen/margin_extra_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bulgogi_picture"
                android:layout_width="@dimen/_200dp"
                android:layout_height="@dimen/_150dp"
                android:src="@drawable/pumpasoppa"
                android:scaleType="centerCrop"
                android:contentDescription="@string/bulgogi"/>

            <TextView
                android:id="@+id/desserts_text_view_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light_black_2"
                android:padding="@dimen/margin_small"
                android:text="@string/desserts_2"
                android:textStyle="bold"
                android:textSize="@dimen/font_medium"
                android:textColor="@color/red_orange">
            </TextView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/desserts_card_view_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/desserts_card_view_2"
        android:layout_margin="@dimen/margin_extra_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/samgyeopsal_picture"
                android:layout_width="@dimen/_200dp"
                android:layout_height="@dimen/_150dp"
                android:src="@drawable/patbingsu"
                android:scaleType="centerCrop"
                android:contentDescription="@string/samgyeopsal"/>

            <TextView
                android:id="@+id/desserts_text_view_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light_black_2"
                android:padding="@dimen/margin_small"
                android:text="@string/desserts_3"
                android:textStyle="bold"
                android:textSize="@dimen/font_medium"
                android:textColor="@color/red_orange">
            </TextView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>